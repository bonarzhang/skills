{
  "_description": "Example configuration file for Skill Guardian",
  "_location": "Place this file in the skill directory as .guardianrc.json",
  
  "ignorePatterns": [
    "test/**",
    "tests/**",
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "*.min.js",
    "*.map"
  ],
  
  "allowedDomains": [
    "api.openweathermap.org",
    "api.github.com",
    "slack.com",
    "discord.com",
    "api.twitter.com",
    "api.x.com"
  ],
  
  "strictMode": false,
  "maxEncodedDepth": 3,
  "maxFileSizeKB": 1024,
  "timeoutMs": 30000
}
